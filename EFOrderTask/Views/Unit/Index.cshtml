@model IEnumerable<EFOrderTask.Models.Unit>

@{
    ViewData["Title"] = "Index";
}

<h3>List Of Unit</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Unit</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["UnitTypeSortParm"]">Unit Name</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Unit_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Unit_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Unit_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Unit_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
